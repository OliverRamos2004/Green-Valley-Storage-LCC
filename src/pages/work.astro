---
import BaseLayout from "../layouts/BaseLayout.astro";

const photos = [
  { src: "/images/work1.jpg", title: "Delivery of a shipping container", alt: "Delivery of a shipping container", tag: "Delivery" },
  { src: "/images/work2.jpg", title: "Placement of a shipping container", alt: "Placement of a shipping container", tag: "Placement" },
  { src: "/images/work3.jpg", title: "Moving a shipping container", alt: "Moving a shipping container", tag: "Moving" },
  { src: "/images/work4.jpg", title: "Sales of a shipping container", alt: "Sales of a shipping container", tag: "Sales" },
  { src: "/images/work5.jpg", title: "Sales of a shipping container", alt: "Sales of a shipping container", tag: "Sales" },
  { src: "/images/work6.jpg", title: "Logistics of shipping containers", alt: "Logistics of shipping containers", tag: "Logistics" },
];
---

<BaseLayout title="Work / Photos | Green Valley Storage">
  <section class="section">
    <div class="container">
      <h1>Work / Photos</h1>
      <p class="lead">
        Examples of container sales, delivery, placement, and relocation work. (More photos coming soon.)
      </p>

      <div class="gallery">
        {photos.map((p) => (
          <figure class="photo-card">
            <a href={p.src} rel="noopener noreferrer" class="photo-link"><img src={p.src} alt={p.alt} loading="lazy" class="photo-img"/>
            <figcaption class="photo-meta">
              <span class="photo-title">{p.title}</span>
              <span class="badge">{p.tag}</span>
            </figcaption>
          </figure></a>
            
        ))}
      </div>

      <div class="cta">
        <div>
          <h2 class="cta-title">Want to see availability?</h2>
          <p class="cta-text">Tell us what size you need and your delivery location.</p>
        </div>
        <a class="btn btn-primary" href="/contact">Request a Quote</a>
      </div>
    </div>
  </section>
</BaseLayout>
