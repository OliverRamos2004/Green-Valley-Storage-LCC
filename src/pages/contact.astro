---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact | Green Valley Storage">
  <section class="section">
    <div class="container container-contact">
      
      <h1>Contact</h1>
      <p class="lead">
        Tell us what you’re looking for and we’ll follow up with availability and pricing.
      </p>
      <div class="contact-card">

      <form
        class="contact-form"
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/thanks"
      >
        <input type="hidden" name="form-name" value="contact" />

        <p class="hidden">
          <label>
            Don’t fill this out if you’re human: <input name="bot-field" />
          </label>

        <div class="form-grid">
          <div class="field">
            <label for="name">Name</label>
            <input id="name" name="name" type="text" required />
          </div>

          <div class="field">
            <label for="phone">Phone</label>
            <input id="phone" name="phone" type="tel" />
          </div>

          <div class="field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" required />
          </div>

          <div class="field">
            <label for="service">What do you need?</label>
            <select id="service" name="service">
              <option>Transportation / Set-up</option>
              <option>On-site relocation / Pickup</option>
              <option>Leveling / Re-leveling</option>
              <option>General Question</option>
            </select>
          </div>

          <div class="field full">
            <label for="message">Message</label>
            <textarea id="message" name="message" rows="4"></textarea>
          </div>
        </div>

        <button class="btn btn-primary" type="submit">
          Send Message
        </button>
      </form>

      <div class="contact-alt">
        <p>
          Prefer to talk directly?  
          <a href="tel:+15125870688">Call us</a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
