---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Reviews | Green Valley Storage">
    <section class="section">
        <div class="container">
        <h1>Reviews</h1>
        <p class="lead">See what our customers are saying about us.</p>
    
        <div class="reviews-list">
            <div class="review-card">
            <p class="review-text">
                "Green Valley Storage did an amazing job moving my shed. They were professional, efficient, and took great care of my property. Highly recommend!"
            </p>
            <p class="review-author">- Sarah M.</p>
            </div>
    
            <div class="review-card">
            <p class="review-text">
                "I needed to relocate a shipping container and Green Valley Storage made the process so easy. They communicated clearly and got the job done on time."
            </p>
            <p class="review-author">- John D.</p>
            </div>
    
            <div class="review-card">
            <p class="review-text">
                "Excellent service from start to finish. The team was friendly, professional, and handled everything with care. I couldn't be happier with the results!"
            </p>
            <p class="review-author">- Emily R.</p>
            </div>
        </div>
        </div>
    </section>
</BaseLayout>
