---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/services", label: "Services" },
  { href: "/work", label: "Work / Photos" },
  { href: "/contact", label: "Contact" },
  { href: "/reviews", label: "Reviews" },
];
---

<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="brand">
  <img
    src="/images/greenvalley-logo.png"
    alt="Green Valley Storage logo"
    class="brand-logo"
  />
  <div class="brand-text">
    <span class="brand-name">Green Valley Storage</span>
    <span class="brand-sub">Transportation Services</span>
  </div>
</a>

    <nav class="nav">
      {navLinks.map((link) => (
        <a class="nav-link" href={link.href}>{link.label}</a>
      ))}
    </nav>
  </div>
</header>
